{
    "name": "ifcastle/type-definitions",
    "description": "Library for defining data types at the business logic layer. Data hydration and serialization based on type definitions.",
    "type": "library",
    "license": "MIT",
    "keywords": ["data", "types", "definitions", "hydration", "serialization", "compilation", "validation"],
    "autoload": {
        "psr-4": {
            "IfCastle\\TypeDefinitions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\TypeDefinitions\\": "./tests",
            "Examples\\": "./examples"
        }
    },
    "require": {
        "ifcastle/exceptions": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "amphp/php-cs-fixer-config": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.60"
    },
    "scripts": {
        "test": "vendor/bin/phpunit ./tests"
    }
}
